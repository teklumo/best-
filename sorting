ACCENDING ORDER 

#include <iostream>
using namespace std;
#include <string>
int main(){
	int arr[20]={16,22,99,4,18,-258,4,101,5,98,105,6,15,2,45,33,88,72,16,3};
	for(int i=0;i<20;i++){
		for (int j=i;j<20;j++){
			if(arr[i]>arr[j]){
				int temp=arr[i];
				arr[i]=arr[j];
				arr[j]=temp;			
			}
		}
	}
	
	for(int i=0;i<20;i++){
		cout<<arr[i]<<" ";
	}
	
return 0;
}




DESENDING ORDER



#include <iostream>
using namespace std;
#include <string>
int main(){
	int arr[20]={16,22,99,4,18,-258,4,101,5,98,105,6,15,2,45,33,88,72,16,3};
	for(int i=0;i<20;i++){
		for(int j=i+1;j<20;j++){
			if(arr[i]<arr[j]){
				int temp=arr[i];
				arr[i]=arr[j];
				arr[j]=temp;
			}
		}
	}
	for(int i=0;i<20;i++){
		cout<<arr[i]<<" ";
	}
return 0;
}
